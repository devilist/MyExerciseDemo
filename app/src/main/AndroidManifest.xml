<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.zengpu.com.myexercisedemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 从SDCard读取数据权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 视频拍摄拼接 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAPTURE_AUDIO_OUTPUT" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.bumptech.glide.integration.okhttp3.OkHttpGlideModule"
            android:value="GlideModule" />

        <activity
            android:name=".demolist.design_support_library.activity.DSLLoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".demolist.design_support_library.activity.DSLMainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".demolist.photoloop0.PhotoLoopActivity"
            android:label="图片轮播:ViewPager+Handler" />
        <activity
            android:name=".demolist.photoloop1.ImageLoopActivity"
            android:label="图片轮播:ViewPager+定时任务" />
        <activity
            android:name=".demolist.multi_drawer.MultiDrawerActivity"
            android:label="多层抽屉"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.pull_to_refresh.RefreshAndLoadActivity"
            android:label="下拉刷新，上拉加载"
            android:theme="@style/AppTheme.ActionBar.SwapeBack" />
        <activity
            android:name=".demolist.pull_to_refresh.activity.ListviewActivity"
            android:label="Listview" />
        <activity
            android:name=".demolist.pull_to_refresh.activity.RecyclerviewActivity"
            android:label="Recyclerview" />
        <activity
            android:name=".demolist.pull_to_refresh.activity.TextViewActivity"
            android:label="TextView" />
        <activity
            android:name=".demolist.pull_to_refresh.activity.GridViewActivity"
            android:label="gridView" />
        <activity
            android:name=".demolist.pull_to_refresh.activity.CustomViewActivity"
            android:label="CustomView" />
        <activity
            android:name=".demolist.videoRecord.VideoAppendActivity"
            android:label="视频拍摄拼接"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.videoRecord.VideoPreviewActivity"
            android:label="视频预览"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.design_support_library.activity.DSLScrollingActivity"
            android:label="@string/title_activity_dslscrolling"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.design_support_library.activity.DSLSettingsActivity"
            android:label="@string/title_activity_dslsettings" />
        <activity
            android:name=".demolist.design_support_library.activity.DSLFullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_dslfullscreen"
            android:theme="@style/FullscreenTheme" />

        <activity
            android:name=".demolist.recyclerViewPager.RecyclerViewPagerActivity"
            android:label="RecyclerViewPager"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.recyclerViewPager.ThreeDViewPagerActivity"
            android:label="CustomRecyclerViewPager"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.recyclerViewPager.snap.SnapHelperActivity"
            android:label="SnapHelperActivity"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.selected_textview.SelectedTextViewActivity"
            android:label="selectedview" />
        <activity
            android:name=".demolist.svg_path_anim.SvgAnimActivity"
            android:label="svgAnim" />
        <activity
            android:name=".demolist.vertical_textview.VerticalTextViewActivity"
            android:label="VerticalTextView" />
        <activity
            android:name=".demolist.rich_textview.RichTextViewActivity"
            android:label="RichTextView"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.glide_with_progress.ProgressLoadingActivity"
            android:label="ProgressLoading"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />

        <activity
            android:name=".demolist.cardlistview.CardListViewActivity"
            android:label="CardListView" />
        <activity
            android:name=".demolist.snakeview.SnakeViewActivity"
            android:label="SnakeView" />
        <activity
            android:name=".demolist.imageview_scale.ScaleImageViewActivity"
            android:label="ScaleImageView"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.StatusBarTransparent" />
        <activity
            android:name=".demolist.imageview_crop.CropImageViewActivity"
            android:label="CropImageView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".demolist.wheel_picker.WheelPickerActivity"
            android:label="WheelPicker"
            android:screenOrientation="portrait" />
        <activity android:name=".demolist.matrix.MatrixActivity" />

    </application>

</manifest>