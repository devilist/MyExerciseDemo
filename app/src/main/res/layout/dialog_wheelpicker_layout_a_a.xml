<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_root"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffd47f"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="cancel"
            android:textColor="@android:color/white"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:includeFontPadding="false"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="ok"
            android:textColor="@android:color/white"
            android:textSize="17sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_toLeftOf="@id/btn_ok"
            android:layout_toRightOf="@id/btn_cancel"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_unit_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="7.5dp"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <net.miaotu.cnlib.android.wheelpicker.view.WheelCurvedPicker
                android:id="@+id/wcp_a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_unit_a"
                app:wheel_direction="vertical"
                app:wheel_item_count="7"
                app:wheel_item_index="0"
                app:wheel_item_same_size="false"
                app:wheel_item_space="20dp"
                app:wheel_style="curved"
                app:wheel_text_color="#262626"
                app:wheel_text_color_current="#262626"
                app:wheel_text_size="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="#33888888"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_unit_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7.5dp"
                android:layout_marginRight="35dp"
                android:textColor="@android:color/black"
                android:visibility="gone"/>

            <net.miaotu.cnlib.android.wheelpicker.view.WheelCurvedPicker
                android:id="@+id/wcp_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_unit_b"
                app:wheel_direction="vertical"
                app:wheel_item_count="7"
                app:wheel_item_index="0"
                app:wheel_item_same_size="false"
                app:wheel_item_space="20sp"
                app:wheel_style="curved"
                app:wheel_text_color="#262626"
                app:wheel_text_color_current="#262626"
                app:wheel_text_size="17sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:background="#33888888"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>