<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical">

    <Button
        android:id="@+id/noramltab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:text="NoramlTabActivity"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#30ffffff"/>

    <Button
        android:id="@+id/icontab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:text="IconTabActivity"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#30ffffff"/>

    <Button
        android:id="@+id/customtab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:text="CustomTabActivity"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#30ffffff"/>

    <Button
        android:id="@+id/viewtab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:text="ViewTabActivity"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#30ffffff"/>

    <Button
        android:id="@+id/weibotab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:text="WeiboTabActivity"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="#30ffffff"/>

</LinearLayout>
