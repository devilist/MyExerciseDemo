<app.zengpu.com.myexercisedemo.demolist.multi_drawer.MultiDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multi_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/view_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我是child0"
            android:textSize="24sp"
            android:textColor="#797979"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/up_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:orientation="vertical"
        android:background="#bbbbbb"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我是child1,upDrawer"
            android:textSize="24sp"
            android:textColor="#797979"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >

        <TextView
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我是child2"
            android:textSize="24sp"
            android:textColor="#797979"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/down_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:background="#999999"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我是child3, downDrawer"
            android:textSize="24sp"
            android:textColor="#797979"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/upDownDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:elevation="40dp"
        android:background="#666666"
        >

        <TextView
            android:id="@+id/drawe_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我是child4,双向抽屉"
            android:textSize="24sp"
            android:textColor="#484848"
            />

    </LinearLayout>

</app.zengpu.com.myexercisedemo.demolist.multi_drawer.MultiDrawerLayout>
