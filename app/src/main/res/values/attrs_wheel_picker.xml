<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PowerImageView">
        <attr name="auto_play" format="boolean"></attr>
    </declare-styleable>
    <declare-styleable name="RoundProgressPlayerButton">
        <attr name="roundButtonColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="triangleColor" format="color" />
        <attr name="roundButtonWidth" format="dimension" />
        <attr name="roundProgressWidth" format="dimension" />
        <attr name="triangleWidth" format="dimension" />
        <attr name="gap" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandText" format="string" />
        <attr name="collapseText" format="string" />
    </declare-styleable>
    <!-- From: file:/Users/manabu/Documents/private/git/ExpandableTextView/lib/src/main/res/values/ids.xml -->
    <item name="expand_collapse" type="id" />
    <item name="expandable_text" type="id" />

    <!-- 样式 -->
    <declare-styleable name="AbstractWheelPicker">
        <attr name="wheel_style" format="enum">
            <enum name="straight" value="0" />
            <enum name="curved" value="1" />
        </attr>
        <attr name="wheel_direction" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="wheel_item_index" format="integer" />
        <attr name="wheel_item_same_size" format="boolean" />
        <attr name="wheel_item_count" format="integer" />
        <attr name="wheel_item_space" format="dimension" />
        <attr name="wheel_text_size" format="dimension" />
        <attr name="wheel_text_color" format="color" />
        <attr name="wheel_text_color_current" format="color" />
    </declare-styleable>
    <!-- 默认字体大小 -->
    <dimen name="wheel_default_text_size">14sp</dimen>
    <!-- 默认padding -->
    <dimen name="wheel_default_wheel_padding">4dp</dimen>
</resources>
